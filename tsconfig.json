{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es6",
    "moduleResolution": "node",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "strict": true, 
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "*": [
          "node_modules/*",
          "src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "test"
  ]
}
